package kh.or.iei.student.controller;

import java.util.Scanner;

public class StudentController {
	//학생정보를 관리하는 프로그램
	//학생정보 이름, 나이, 주소
	//동명이인없음(가정), 데이터는 정상적으로 입력된다.
	private String[] name;
	private int[] age;
	private String[] addr;
	private Scanner sc;
	//배열관리번호(학생 정보 추가시 학생정보가 들어갈 배열 위치를 저장할 변수)
	private int index;
	
	public StudentController() {
		name = new String[10];
		age = new int[10];
		addr = new String[10];
		sc = new Scanner(System.in);
		index = 0;
	}
	
	//최초 실행메소드(메뉴를 제공)
	public void main() {
		while(true) {
			System.out.println("\n ------학생관리프로그램v1-----\n");
			System.out.println("1. 학생 정보 등록");
			System.out.println("2. 학생 정보 출력(전체학생정보)");
			System.out.println("3. 학생 정보 출력(1명: 이름으로 검색)");
			System.out.println("4. 학생 정보 수정");
			System.out.println("5. 학생 정보 삭제");
			System.out.println("0. 프로그램 종료");
			
		}
	}
	
}
